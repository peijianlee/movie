extends ../layout

block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 角色权限
						th 用户名称
						th 创建时间
						th 查看
						th 更新
						th 删除
				tbody
					each item in users
						if item.role == 0
							tr(class="item-id-#{item._id}")
								td 普通用户
								td #{item.name}
								td #{moment(item.meta.updateAt).format('YYYY/MM/DD/ HH:mm')}
								td: a(target="_blank", href="../movie/#{item._id}") 查看
								td: a(target="_blank", href="../admin/update/#{item._id}") 修改
								td
									button.btn.btn-danger.userdel(type="button", data-id="#{item._id}") 删除
						else
							tr.success(class="item-id-#{item._id}")
								td 管理员
								td #{item.name}
								td #{moment(item.meta.updateAt).format('YYYY/MM/DD/ HH:mm')}
								td: a(target="_blank", href="../movie/#{item._id}") 查看
								td: a(target="_blank", href="../admin/update/#{item._id}") 修改
								td
									span.btn.btn-danger.userdel(disabled="disabled") 删除
	script(src="/js/admin.js")